<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_historico_coletas"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/nome_fantasia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item 1"
            android:textColor="#16401C"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/data_hora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item 2"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/qtdOleoLitros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item 3"
            android:textColor="#16401C"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btnGerar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/pdf"
            android:backgroundTint="#16401C"></Button>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>